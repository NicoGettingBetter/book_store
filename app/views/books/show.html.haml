.page-header
  %h1
    = presenter.book.title
    %small
      = by_authors presenter.book
      = authors_links presenter.book
%table.center
  %tr
    %td
      = image presenter.book, class: :large
    %td.top.left
      %table
        %tr
          %td
            %table
              %tr
                %td
                  = presenter.book.decorated_price
                %td
                  = form_for presenter.order_item do |f|
                    = f.hidden_field :book_id, value: presenter.book.id
                    %table
                      %tr
                        %td
                          = f.number_field :quantity, value: presenter.order_item.quantity, in: 1..presenter.book.instock, class: 'short'
                        %td
                          = f.submit t(:add_to_cart)
        %tr
          %td
            .xs= description presenter.book, 2000
.page-header
  %h1
    - if presenter.approved_reviews.any?
      = t(:comments)
    %small
      - if can? :update, Review
        = link_to t(:add_comment), new_review_path(book_id: presenter.book.id)
= render partial: 'review', collection: presenter.approved_reviews, as: :review
