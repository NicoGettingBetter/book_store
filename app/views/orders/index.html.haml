%h1.page-header= t(:orders)
- unless presenter.order_in_progress_items.empty?
  %h2.page-header= t(:in_progress)
  %table.throughout
    %tr
      %th
      %th= t(:book)
      %th= t(:price)
      %th= t(:qty)
      %th= t(:total)
    = render partial: 'order_item_info', collection: presenter.order_in_progress_items, as: :order_item
  %table.page-header.throughout.right
    %tr
      %td
        = "#{t(:subtotal)}: #{price(current_order.subtotal)}"
  %table.center
    %tr
      %td.left
        = button_to t(:go_to_cart), edit_order_path(current_order.id), method: :get
= render partial: 'orders', collection: presenter.methods, as: :method
